# Pokemon Draft League - Environment Variables
# Copy this file to .env.local for local development
# All VITE_* variables are exposed to the client bundle

# =============================================================================
# API Configuration
# =============================================================================

# Backend API URL (no trailing slash)
VITE_API_URL=http://localhost:3001/api

# API request timeout in milliseconds
VITE_API_TIMEOUT=30000

# =============================================================================
# App Configuration
# =============================================================================

# Application name (shown in browser title, etc.)
VITE_APP_NAME=Pokemon Draft League

# Public URL of the app (used for sharing links, etc.)
VITE_APP_URL=http://localhost:5173

# =============================================================================
# Feature Flags
# =============================================================================

# Enable analytics tracking (Google Analytics, etc.)
VITE_ENABLE_ANALYTICS=false

# Enable debug mode (extra console logging)
VITE_ENABLE_DEBUG=true
